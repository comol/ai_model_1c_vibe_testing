// Заполнение массива случайными числами и сортировка пузырьком
Процедура ЗаполнитьИОтсортироватьМассив()

    // Создаем массив для хранения чисел
    МассивЧисел = Новый Массив;
    
    // Заполняем массив 20 случайными числами от -100 до 100
    Для Счетчик = 1 По 20 Цикл
        СлучайноеЧисло = Цел(СлучайноеЧисло() * 200 - 100);
        МассивЧисел.Добавить(СлучайноеЧисло);
    КонецЦикла;
    
    // Выводим исходный массив
    Сообщить("Исходный массив: " + СтрСоединить(МассивЧисел, ", "));
    
    // Сортируем массив методом пузырька
    // Внешний цикл - количество проходов
    Для i = 0 По МассивЧисел.Количество() - 2 Цикл
        
        // Внутренний цикл - сравнение соседних элементов
        Для j = 0 По МассивЧисел.Количество() - 2 - i Цикл
            
            // Если текущий элемент больше следующего, меняем их местами
            Если МассивЧисел[j] > МассивЧисел[j + 1] Тогда
                // Обмен значениями через временную переменную
                Временная = МассивЧисел[j];
                МассивЧисел[j] = МассивЧисел[j + 1];
                МассивЧисел[j + 1] = Временная;
            КонецЕсли;
            
        КонецЦикла;
        
    КонецЦикла;
    
    // Выводим отсортированный массив
    Сообщить("Отсортированный массив: " + СтрСоединить(МассивЧисел, ", "));
    
КонецПроцедуры

// Вызов процедуры для демонстрации
ЗаполнитьИОтсортироватьМассив();