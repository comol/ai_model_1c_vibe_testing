// Основная процедура
Процедура ОсновнаяПроцедура()
	ЧислоЭлементов = 10;
	МинимальноеЗначение = 0;
	МаксимальноеЗначение = 100;
	
	// Генерация массива
	ИсходныйМассив = Новый Массив;
	ГенераторСлучайныхЧисел = Новый ГенераторСлучайныхЧисел();
	
	Для Счетчик = 1 по ЧислоЭлементов цикл
		СлучайноеЧисло = ГенераторСлучайныхЧисел.СлучайноеЧисло(МинимальноеЗначение, МаксимальноеЗначение);
		ИсходныйМассив.Добавить(СлучайноеЧисло);
	КонецЦикла;
	
	// Вывод исходного массива
	Сообщить("Исходный массив:");
	Для Каждого Элемент Из ИсходныйМассив цикл
		Сообщить(Элемент);
	КонецЦикла;
	
	// Сортировка
	ОтсортированныйМассив = СортировкаПузырьком(ИсходныйМассив);
	
	// Вывод отсортированного массива
	Сообщить("Отсортированный массив:");
	Для Каждого Элемент Из ОтсортированныйМассив цикл
		Сообщить(Элемент);
	КонецЦикла;
КонецПроцедуры

// Функция сортировки пузырьком
Функция СортировкаПузырьком(МассивДляСортировки)
	РезультатСортировки = МассивДляСортировки.Скопировать();
	РазмерМассива = РезультатСортировки.ВГраница();
	
	Для i = 0 по РазмерМассива - 1 цикл
		Для j = 0 по РазмерМассива - i - 2 цикл
			Если РезультатСортировки[j] > РезультатСортировки[j + 1] Тогда
				// Обмен значениями
				ВременнаяПеременная = РезультатСортировки[j];
				РезультатСортировки[j] = РезультатСортировки[j + 1];
				РезультатСортировки[j + 1] = ВременнаяПеременная;
			КонецЕсли;
		КонецЦикла;
	КонецЦикла;
	
	Возврат РезультатСортировки;
КонецФункции

// Вызов основной процедуры
ОсновнаяПроцедура();