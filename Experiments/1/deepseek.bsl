КоличествоЭлементов = МассивЧисел.Количество();

Для i = 0 По КоличествоЭлементов - 1 Цикл
    
    Для j = 0 По КоличествоЭлементов - i - 2 Цикл
        
        Если МассивЧисел[j] > МассивЧисел[j + 1] Тогда
            // Обмен соседних элементов
            Буфер = МассивЧисел[j];
            МассивЧисел[j] = МассивЧисел[j + 1];
            МассивЧисел[j + 1] = Буфер;
        КонецЕсли;
        
    КонецЦикла;
    
