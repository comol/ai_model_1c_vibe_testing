// Процедура для сортировки массива методом пузырька
//
// Параметры:
//  Массив - Массив - массив для сортировки
//
Процедура СортироватьМассивПузырьком(Массив)
	
	КоличествоЭлементов = Массив.Количество();
	
	// Внешний цикл - проходы по массиву
	Для i = 0 По КоличествоЭлементов - 2 Цикл
		
		БылаПерестановка = Ложь;
		
		// Внутренний цикл - сравнение соседних элементов
		Для j = 0 По КоличествоЭлементов - 2 - i Цикл
			
			// Если текущий элемент больше следующего, меняем их местами
			Если Массив[j] > Массив[j + 1] Тогда
				
				// Сохраняем значение текущего элемента
				ВременноеЗначение = Массив[j];
				
				// Меняем местами элементы
				Массив[j] = Массив[j + 1];
				Массив[j + 1] = ВременноеЗначение;
				
				БылаПерестановка = Истина;
				
			КонецЕсли;
			
		КонецЦикла;
		
		// Если за проход не было ни одной перестановки, массив отсортирован
		Если НЕ БылаПерестановка Тогда
			
			Прервать;
			
		КонецЕсли;
		
	КонецЦикла;
	
КонецПроцедуры

// Процедура для вывода массива в строку
//
// Параметры:
//  Массив - Массив - массив для вывода
//  Заголовок - Строка - заголовок для вывода
//
// Возвращаемое значение:
//  Строка - строковое представление массива
//
Функция МассивВСтроку(Массив, Заголовок = "")
	
	Результат = Заголовок;
	
	Если НЕ ПустаяСтрока(Заголовок) Тогда
		
		Результат = Результат + ": ";
		
	КонецЕсли;
	
	Результат = Результат + "[";
	
	Для Индекс = 0 По Массив.ВГраница() Цикл
		
		Результат = Результат + Строка(Массив[Индекс]);
		
		Если Индекс < Массив.ВГраница() Тогда
			
			Результат = Результат + ", ";
			
		КонецЕсли;
		
	КонецЦикла;
	
	Результат = Результат + "]";
	
	Возврат Результат;
	
КонецФункции

