// Создание запроса
Запрос = Новый Запрос;
Запрос.Текст = 
    "ВЫБРАТЬ
    |   ОстаткиТовараСрезПоследних.Цена
    |ИЗ
    |   РегистрНакопления.ОстаткиТовара.СрезПоследних(
    |       &Дата,
    |       Номенклатура = &Номенклатура
    |   ) КАК ОстаткиТовараСрезПоследних";

// Установка параметров
Запрос.УстановитьПараметр("Дата", ТекущаяДата()); // Или ваша дата
Запрос.УстановитьПараметр("Номенклатура", СсылкаНаТовар); // Ссылка на нужный товар

// Выполнение запроса
Результат = Запрос.Выполнить();
Выборка = Результат.Выбрать();

Если Выборка.Следующий() Тогда
    ЦенаТовара = Выборка.Цена; // Полученное значение цены
    Сообщить("Цена на " + Формат(Запрос.Параметры.Дата, "ДЛФ=Д") + ": " + ЦенаТовара);
Иначе
    Сообщить("Для товара нет данных на указанную дату!");
КонецЕсли;