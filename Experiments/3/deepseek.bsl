Функция ПолучитьЦеныНаДату(Знач ДатаОтчет) Экспорт
    
    Запрос = Новый Запрос;
    Запрос.Текст = 
    "ВЫБРАТЬ
    |    ОстаткиТовара.Номенклатура,
    |    ОстаткиТовара.Цена
    |ИЗ
    |    РегистрНакопления.ОстаткиТовара.Остатки(&Дата, Номенклатура) КАК ОстаткиТовара
    |ГДЕ
    |    ОстаткиТовара.Количество > 0";
    
    Запрос.УстановитьПараметр("Дата", ДатаОтчет);
    
    Возврат Запрос.Выполнить().Выгрузить();
    
КонецФункции