// Процедура обработки команды, которая будет передавать данные
&НаКлиенте
Процедура ПередатьТоварыВДругуюФорму(Команда)
    // Получаем данные из табличной части "Товары"
    ДанныеТоваров = Объект.Товары.Выгрузить();
    
    // Получаем вторую форму (форма-приемник)
    // Если форма уже открыта, получаем её
    МассивОткрытыхФорм = ПолучитьФормы("ВтораяФорма", , Истина);
    
    Если МассивОткрытыхФорм.Количество() > 0 Тогда
        // Если форма уже открыта
        ФормаПриемник = МассивОткрытыхФорм[0];
    Иначе
        // Если форма еще не открыта, открываем ее
        ФормаПриемник = ПолучитьФорму("ВтораяФорма");
        ФормаПриемник.Открыть();
    КонецЕсли;
    
    // Передаем данные во вторую форму
    // Выполняем экспортную процедуру формы-приемника
    ФормаПриемник.ПринятьТовары(ДанныеТоваров);
КонецПроцедуры

   // Процедура для приема данных из другой формы
&НаКлиенте
Процедура ПринятьТовары(ДанныеТоваров) Экспорт
    // Загружаем данные в табличную часть на сервере
    ЗагрузитьТоварыНаСервере(ДанныеТоваров);
    
    // Обновляем форму, чтобы отобразить изменения
    Элементы.Товары.Обновить();
КонецПроцедуры

// Серверная процедура для загрузки данных
&НаСервере
Процедура ЗагрузитьТоварыНаСервере(ДанныеТоваров)
    // Очищаем табличную часть перед загрузкой новых данных (если нужно)
    // Объект.Товары.Очистить();
    
    // Загружаем полученные данные в табличную часть
    Объект.Товары.Загрузить(ДанныеТоваров);
КонецПроцедуры

// При создании на сервере можно обработать параметры, если форма открывается с данными
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
    // Если форма открывается с данными, можно их обработать здесь
    // Например, если в параметрах переданы данные
    Если Параметры.Свойство("ДанныеТоваров") Тогда
        Объект.Товары.Загрузить(Параметры.ДанныеТоваров);
    КонецЕсли;
КонецПроцедуры