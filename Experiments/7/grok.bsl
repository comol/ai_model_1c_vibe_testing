// Код для модуля Формы1 (источник) - клиентский раздел

// Процедура для передачи данных из табличной части Товары
&НаКлиенте
Процедура ПередатьТовары(Команда)
	
	// Сбор данных из табличной части
	ТаблицаТоваров = Новый ТаблицаЗначений;
	ТаблицаТоваров.Колонки.Добавить("Номенклатура");
	ТаблицаТоваров.Колонки.Добавить("Количество");
	ТаблицаТоваров.Колонки.Добавить("Цена");
	
	Для Каждого Строка Из Товары Цикл
		НоваяСтрока = ТаблицаТоваров.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, Строка);
	КонецЦикла;
	
	// Передача через оповещение
	Оповестить("ПередачаТоваров", ТаблицаТоваров);
	
КонецПроцедуры

// Код для модуля Формы2 (приёмник) - клиентский раздел

// Подключение обработчика при открытии формы
&НаКлиенте
Процедура ПриОткрытии(Отказ)
	
	Описание = Новый ОписаниеОповещения("ОбработкаПередачиТоваров", ЭтотОбъект);
	ПодключитьОбработчикОповещения(Описание);
	
КонецПроцедуры

// Обработчик получения данных
&НаКлиенте
Процедура ОбработкаПередачиТоваров(Параметры, ДополнительныеПараметры) Экспорт
	
	Если Параметры = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	// Очистка и заполнение табличной части
	Товары.Очистить();
	
	Для Каждого Строка Из Параметры Цикл
		НоваяСтрока = Товары.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, Строка);
	КонецЦикла;
	
КонецПроцедуры